{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "yarn build app --prod"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "yarn start app --prod --port ${PORT:-4001}",

    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}